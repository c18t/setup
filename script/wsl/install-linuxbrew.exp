#!/usr/bin/env expect

set timeout -1
set SH_COMMAND [lindex $argv 0]
set PW [lindex $argv 1]

spawn bash -c "${SH_COMMAND}"
expect {
  -glob "* password for *:*" {
    send -- "${PW}\n"
    exp_continue
  }
  -glob "Press * to continue or any other key to abort" {
    send -- "\n"
    exp_continue
  }
  eof {
    exit 0
  }
}
